<div class="row">
    <div class="col-md-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical needs-validation" method="post" novalidate
                          action="{% if distribuidor.id is defined %}{{ path('distribuidor_update', {'id':  distribuidor.id }) }}{% else %}{{ path('distribuidor_update', {'id':  0 }) }}{% endif %}"
                    >
                        <input type="hidden" name="action" id="action" value="{{ action }}">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label for="estado">Estado</label>

                                        <div class="position-relative has-validation d-flex align-items-center">
                                            <span class="me-2">Inactivo</span>
                                            <div class="form-check form-switch mb-0">
                                                <input class="form-check-input" type="checkbox" role="switch"
                                                       id="estado" value="1" name="estado"
                                                       {% if distribuidor.estado is defined and distribuidor.estado == 1 %}checked{% endif %}>
                                            </div>
                                            <span>Activo</span>
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="distribuidor">Distribuidor</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control" id="distribuidor"
                                                   name="distribuidor"
                                                   required
                                                   value="{% if distribuidor.distribuidor is defined %}{{ distribuidor.distribuidor }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label for="contacto">Contacto</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control"
                                                   id="contacto" name="contacto" required
                                                   value="{% if distribuidor.contacto is defined %}{{ distribuidor.contacto }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="telefono">Teléfono</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control" id="telefono" name="telefono"
                                                   required
                                                   value="{% if distribuidor.telefono is defined %}{{ distribuidor.telefono }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label for="celular">Celular</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control"
                                                   id="celular" name="celular" required
                                                   value="{% if distribuidor.celular is defined %}{{ distribuidor.celular }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="direccion">Dirección</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control" id="direccion" name="direccion"
                                                   required
                                                   value="{% if distribuidor.direccion is defined %}{{ distribuidor.direccion }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label for="longitud">Longitud</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control"
                                                   id="longitud" name="longitud" required
                                                   value="{% if distribuidor.longitud is defined %}{{ distribuidor.longitud }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="latitud">Latitud</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control" id="latitud" name="latitud"
                                                   required
                                                   value="{% if distribuidor.latitud is defined %}{{ distribuidor.latitud }}{% endif %}">
                                            <div class="valid-feedback">Válido.</div>
                                            <div class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Guardar</button>
                                    <button type="reset"
                                            class="btn btn-light-secondary me-1 mb-1">Reiniciar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% block js %}
    <script>
        (function () {
            'use strict'
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        //console.log(form["description"].value);
                        //console.log(form["value"].value);
                        // //Validacion
                        // if (form["description"].value == '') {
                        //     document.getElementById('descriptionMessage').innerHTML = 'Este valor es requerido';
                        //     event.preventDefault()
                        //     event.stopPropagation()
                        // }
                        // if (form["value"].value == '') {
                        //     document.getElementById('valueMessage').innerHTML = 'Este valor es requerido';
                        //     event.preventDefault()
                        //     event.stopPropagation()
                        // }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
{% endblock %}