{% extends 'base.html.twig' %}

{% block title %}Variable de configuración{% endblock %}

{% block content %}
    <h1>Variable de configuración</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ configuration.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ configuration.description }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ configuration.value }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('configuration_index') }}">Volver a la lista</a>

    <a class="btn btn-primary" href="{{ path('configuration_edit', {'id': configuration.id}) }}">Editar configuración</a>

    {{ include('configuration/_delete_form.html.twig') }}
{% endblock %}
