{% extends 'base.html.twig' %}

{% block title %}Categoría{% endblock %}

{% block content %}
    <h1>Categoría</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">Volver a la lista</a>

    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Editar categoría</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
