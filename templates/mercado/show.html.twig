{% extends 'base.html.twig' %}

{% block title %}Mercado{% endblock %}

{% block content %}
    <h2>Mercado</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mercado.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mercado.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ mercado.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('mercado_index') }}">Volver a la lista</a>

    <a class="btn btn-primary" href="{{ path('mercado_edit', {'id': mercado.id}) }}">Editar mercado</a>

    {{ include('mercado/_delete_form.html.twig') }}
{% endblock %}
